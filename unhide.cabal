library
    exposed-modules:  Unhide

    -- Modules included in this library but not exported.
    other-modules:
       Config
       Types
       Directory
       Helper

    -- LANGUAGE extensions used by modules in this package.
    -- other-extensions:
    build-depends:
        base ^>=4.16.4.0
      , aeson
      , bytestring
      , directory
      , hashable
      , relude
      , text
      , turtle
      , unliftio
      , unordered-containers
      , yaml

    default-extensions:
      BangPatterns
      DataKinds
      DeriveGeneric
      FlexibleContexts
